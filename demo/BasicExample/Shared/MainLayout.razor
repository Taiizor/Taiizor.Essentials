@inject IJSRuntime JS
@inherits LayoutComponentBase

<div class="page">
	<main>
		<article class="content px-4">
			@Body
		</article>
	</main>
</div>

@code{
	protected override void OnInitialized()
	{
        _ = new Interop(JS, new()
        {
            { Taiizor.Essentials.Maui.Enum.JavascriptEnum.Custom, false },
            { Taiizor.Essentials.Maui.Enum.JavascriptEnum.Taiizor, true },
            { Taiizor.Essentials.Maui.Enum.JavascriptEnum.AppCenter, false },
            { Taiizor.Essentials.Maui.Enum.JavascriptEnum.Conforyon, false }
        });
        
		base.OnInitialized();
	}
}