@inject IJSRuntime JS
@inherits LayoutComponentBase

<div class="page">
	<main>
		<article class="content px-4">
			@Body
		</article>
	</main>
</div>

@code {
    protected override void OnInitialized()
    {
        Dictionary<JavascriptEnum, bool> Files = new()
        {
            { JavascriptEnum.Custom, false },
            { JavascriptEnum.Taiizor, true },
            { JavascriptEnum.AppCenter, false },
            { JavascriptEnum.Conforyon, true }
        };

        Dictionary<AssemblyEnum, bool> Assembly = new()
        {
            { AssemblyEnum.Conforyon, true }
        };

        _ = new Interop(JS, Files, Assembly);

        base.OnInitialized();
    }
}